{
  "servers": {
    "webex-mcp-local-stdio": {
      "type": "stdio",
      "command": "go",
      "args": ["run", "${workspaceFolder}/main.go", "-env", "${workspaceFolder}/.env", "-all-tools"],
      "env": {}
    },
    // Alternative: Use environment variable directly
    "webex-mcp-local-stdio-env": {
      "type": "stdio",
      "command": "go",
      "args": ["run", "${workspaceFolder}/main.go", "-all-tools"],
      "env": {
        "WEBEX_PUBLIC_WORKSPACE_API_KEY": "${env:WEBEX_PUBLIC_WORKSPACE_API_KEY}"
      }
    },
    // Note: Direct SSE not supported - Go SDK uses Streamable HTTP protocol
    // Try "http" type instead of "sse" type in VS Code
    "webex-mcp-local-http": {
      "type": "http",
      "url": "http://localhost:3001"
    },
    "webex-mcp-local-http-server": {
      "type": "stdio",
      "command": "go",
      "args": ["run", "${workspaceFolder}/main.go", "-http", ":3001", "-env", "${workspaceFolder}/.env", "-all-tools"],
      "env": {}
    },
    // Alternative: Use environment variable directly for HTTP server
    "webex-mcp-local-http-server-env": {
      "type": "stdio",
      "command": "go",
      "args": ["run", "${workspaceFolder}/main.go", "-http", ":3001", "-all-tools"],
      "env": {
        "WEBEX_PUBLIC_WORKSPACE_API_KEY": "${env:WEBEX_PUBLIC_WORKSPACE_API_KEY}"
      }
    },
    "webex-mcp-docker": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env-file",
        "${workspaceFolder}/.env",
        "webex-mcp-server:latest"
      ]
    }
  }
}